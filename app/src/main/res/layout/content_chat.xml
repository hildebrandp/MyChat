<?xml version="1.0" encoding="utf-8"?>
<!-- Layout für den Inhalt des activity_chat Layouts -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chatbackgroundcolor"
    android:fitsSystemWindows="true">

        <!-- Button um den eigegebenen Text zu Senden -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="  Send  "
            android:id="@+id/btnsend"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <!-- TextView für den Text den man senden will -->
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/texttosend"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/btnsend"
            android:layout_toStartOf="@+id/btnsend" />

        <!-- ListView um die Nachrichten anzuzeigen -->
        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chatlistView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/btnsend"
            android:transcriptMode="alwaysScroll"
            android:stackFromBottom="true"/>

</RelativeLayout>
